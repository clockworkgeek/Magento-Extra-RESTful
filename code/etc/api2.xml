                    </route_entity_with_store>
                    <route_collection>
                        <route>/reviews</route>
                        <action_type>collection</action_type>
                    </route_collection>
                    <route_collection_with_store>
                        <route>/reviews/store/:store</route>
                        <action_type>collection</action_type>
                    </route_collection_with_store>
                    <route_collection_for_product>
