            <product_review translate="title" module="extrarestful">
                <group>catalog</group>
                <model>extrarestful/api2_review</model>
                <working_model>extrarestful/review</working_model>
                <title>Review</title>
                <sort_order>150</sort_order>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </admin>
                    <customer>
                        <create>1</create>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <create>1</create>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <attributes>
                    <review_id>Review ID</review_id>
                    <product_id>Product ID</product_id>
                    <created_at>Created At</created_at>
                    <title>Title</title>
                    <detail>Detail</detail>
                    <nickname>Customer Nickname</nickname>
                    <customer_id>Customer ID</customer_id>
                    <ratings>Ratings</ratings>
                    <status>Status</status>
                    <stores>Visible In Stores</stores>
                </attributes>
                <exclude_attributes>
                    <admin>
                        <write>
                            <created_at>1</created_at>
                            <review_id>1</review_id>
                            <product_id>1</product_id>
                        </write>
                    </admin>
                    <customer>
                        <write>
                            <created_at>1</created_at>
                            <customer_id>1</customer_id>
                            <product_id>1</product_id>
                            <review_id>1</review_id>
                            <status>1</status>
                            <stores>1</stores>
                        </write>
                    </customer>
                    <guest>
                        <read>
                            <customer_id>1</customer_id>
                            <status>1</status>
                        </read>
                        <write>
                            <created_at>1</created_at>
                            <customer_id>1</customer_id>
                            <product_id>1</product_id>
                            <review_id>1</review_id>
                            <status>1</status>
                            <stores>1</stores>
                        </write>
                    </guest>
                </exclude_attributes>
                <routes>
